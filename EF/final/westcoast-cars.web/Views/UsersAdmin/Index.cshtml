@model IList<westcoast_cars.web.ViewModels.Users.UsersListViewModel>
@{
    Layout = "_LayoutAdmin";
}

<section class="page">
    <h1>Användare</h1>
    <div class="table-container">
        <div>
            <a class="btn btn-primary" asp-action="create" asp-controller="UsersAdmin">Lägg till ny användare</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Användarnamn</th>
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>E-Post</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <a class="edit-icon" asp-action="Edit" asp-controller="UsersAdmin"
                            asp-route-userId=@user.UserId><i class="fa-regular fa-pen"></i></a>
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td><a class="delete-icon" asp-action="Delete" asp-controller="UsersAdmin"
                            asp-route-userId=@user.UserId><i class="fa-solid fa-trash-can"></i></a></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tfoot>
        </table>
    </div>
</section>